<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>

    <form-beans>

        <form-bean name="loginForm" type="org.care.form.LoginForm"/>
        <form-bean name="registerForm" type="org.care.form.RegistrationForm"/>
        <form-bean name="profileForm" type="org.care.form.ProfileForm"/>
        <form-bean name="jobForm" type="org.care.form.JobForm"/>
        <form-bean name="jobAppForm" type="org.care.form.JobAppForm"/>

    </form-beans>

    <action-mappings>

        <action path="/visitor/login" name="loginForm" validate="true" scope="request"
                input="/WEB-INF/jsp/index.jsp" type="org.care.controller.visitor.LoginAction">
            <forward name="seeker" path="/seeker/home.do" redirect="true"/>
            <forward name="sitter" path="/sitter/home.do" redirect="true"/>
            <forward name="failure" path="/"/>
        </action>

        <action path="/visitor/register" name="registerForm" validate="false" scope="request"
                type="org.care.controller.visitor.RegisterTypeAction">
            <forward name="registerPage" path="/WEB-INF/jsp/visitor/register.jsp"/>
            <forward name="homepage" path="/"/>
        </action>

        <action path="/visitor/save" name="registerForm" validate="true" scope="request"
                input="/WEB-INF/jsp/visitor/register.jsp" type="org.care.controller.visitor.MemberRegistrationAction">
            <forward name="seeker" path="/seeker/home.do" redirect="true"/>
            <forward name="sitter" path="/sitter/home.do" redirect="true"/>
            <forward name="failure" path="/"/>
        </action>

        <action path="/seeker/home" type="org.care.controller.seeker.HomePageAction">
            <forward name="homepage" path="/WEB-INF/jsp/seeker/home.jsp"/>
        </action>

        <action path="/sitter/home" type="org.care.controller.sitter.HomePageAction">
            <forward name="homepage" path="/WEB-INF/jsp/sitter/home.jsp"/>
        </action>

        <action path="/member/profile" name="profileForm" validate="false" scope="request"
                type="org.care.controller.member.ViewProfileAction">
            <forward name="profilePage" path="/WEB-INF/jsp/member/profile.jsp"/>
            <forward name="failure" path="/"/>
        </action>

        <action path="/member/edit-profile" name="profileForm" validate="false" scope="request"
                type="org.care.controller.member.EditProfileAction">
            <forward name="profilePage" path="/WEB-INF/jsp/member/editprofile.jsp"/>
        </action>

        <action path="/member/save-profile" name="profileForm" validate="true" scope="request"
                input="/WEB-INF/jsp/member/editprofile.jsp" type="org.care.controller.member.SaveProfileAction">
            <forward name="success" path="/member/profile.do?success=true" redirect="true"/>
            <forward name="failure" path="/member/profile.do?success=false" redirect="true"/>
        </action>

        <action path="/member/delete-profile" type="org.care.controller.member.DeleteProfileAction">
            <forward name="success" path="/" redirect="true"/>
            <forward name="failure" path="/member/profile.do" />
        </action>

        <action path="/seeker/new-job" name="jobForm" validate="false" scope="request"
                type="org.care.controller.seeker.NewJobAction">
            <forward name="newJobPage" path="/WEB-INF/jsp/seeker/newjob.jsp"/>
        </action>

        <action path="/seeker/save-job" name="jobForm" validate="true" scope="request"
                input="/WEB-INF/jsp/seeker/newjob.jsp" type="org.care.controller.seeker.SaveJobAction">
            <forward name="success" path="/seeker/home.do?success=true" redirect="true"/>
            <forward name="failure" path="/seeker/home.do?success=false" redirect="true"/>
        </action>

        <action path="/seeker/list-job" type="org.care.controller.seeker.ListSeekerJobAction">
            <forward name="listJobPage" path="/WEB-INF/jsp/seeker/yourjobs.jsp"/>
        </action>

        <action path="/seeker/edit-job" name="jobForm" validate="false" scope="request"
                type="org.care.controller.seeker.EditJobAction">
            <forward name="editJobPage" path="/WEB-INF/jsp/seeker/editjob.jsp"/>
            <forward name="failure" path="/seeker/list-job?success=false" redirect="true"/>
        </action>

        <action path="/seeker/update-job" name="jobForm" validate="true" scope="request"
                input="/WEB-INF/jsp/seeker/editjob.jsp" type="org.care.controller.seeker.UpdateJobAction">
            <forward name="success" path="/seeker/list-job.do?success=true" redirect="true"/>
            <forward name="failure" path="/seeker/list-job.do?success=false" redirect="true"/>
        </action>

        <action path="/seeker/delete-job" type="org.care.controller.seeker.DeleteJobAction">
            <forward name="success" path="/seeker/list-job.do?success=true" redirect="true"/>
            <forward name="failure" path="/seeker/list-job.do?success=false" redirect="true"/>
        </action>

        <action path="/seeker/list-job-app" type="org.care.controller.seeker.ListJobAppAction">
            <forward name="jobAppListPage" path="/WEB-INF/jsp/seeker/jobapplicationlist.jsp"/>
            <forward name="failure" path="/seeker/list-job.do?success=false" redirect="true"/>
        </action>

        <action path="/member/logout" type="org.care.controller.member.LogoutAction">
            <forward name="homepage" path="/" redirect="true"/>
        </action>

        <action path="/sitter/list-job" type="org.care.controller.sitter.ListJobAction">
            <forward name="listJobPage" path="/WEB-INF/jsp/sitter/listjobs.jsp"/>
        </action>

        <action path="/sitter/apply-job" name="jobAppForm" validate="false" scope="request"
                type="org.care.controller.sitter.ApplyJobAction">
            <forward name="applyJobPage" path="/WEB-INF/jsp/sitter/applyjob.jsp"/>
            <forward name="failure" path="/sitter/list-job.do?success=false" redirect="true"/>
        </action>

        <action path="/sitter/save-job-app" name="jobAppForm" validate="true" scope="request"
                input="/WEB-INF/jsp/sitter/applyjob.jsp" type="org.care.controller.sitter.SaveJobAppAction">
            <forward name="success" path="/sitter/list-job.do?success=true" redirect="true"/>
            <forward name="failure" path="/sitter/list-job.do?success=false" redirect="true"/>
        </action>

        <action path="/sitter/list-job-app" type="org.care.controller.sitter.ListJobAppAction">
            <forward name="listJobAppPage" path="/WEB-INF/jsp/sitter/sitterjobapplications.jsp"/>
        </action>

        <action path="/sitter/edit-job-app" name="jobAppForm" validate="false" scope="request"
                type="org.care.controller.sitter.EditJobAppAction">
            <forward name="editJobAppPage" path="/WEB-INF/jsp/sitter/editjobapplication.jsp"/>
            <forward name="failure" path="/sitter/list-job-app.do?success=false" redirect="true"/>
        </action>

        <action path="/sitter/update-job-app" name="jobAppForm" validate="true" scope="request"
                input="/WEB-INF/jsp/sitter/editjobapplication.jsp" type="org.care.controller.sitter.UpdateJobAppAction">
            <forward name="success" path="/sitter/list-job-app.do?success=true" redirect="true"/>
            <forward name="failure" path="/sitter/list-job-app.do?success=false" redirect="true"/>
        </action>

        <action path="/sitter/delete-job-app" type="org.care.controller.sitter.DeleteJobAppAction">
            <forward name="success" path="/sitter/list-job-app.do?success=true" redirect="true"/>
            <forward name="failure" path="/sitter/list-job-app.do?success=false" redirect="true"/>
        </action>

    </action-mappings>

    <message-resources parameter="message/Messages"/>

</struts-config>