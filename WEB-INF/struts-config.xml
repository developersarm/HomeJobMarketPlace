<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>

    <form-beans>
        <!--<form-bean name="RF" type="beans.RegForm" />-->
        <form-bean name="loginAction" type="org.care.form.LoginForm"/>
    </form-beans>

    <action-mappings>

        <!--<action path="/reg" name="RF" input="/index.jsp" type="controller.RegController" scope="request" validate="true">-->
            <!--<forward name="success" path="/success.jsp"/>-->
            <!--<forward name="fail" path="/fail.jsp"/>-->
        <!--</action>-->

        <action path="/visitor/login" name="loginAction" input="/jsp/index.jsp" scope="request"
                validate="true" type="org.care.controller.visitor.LoginAction">
            <forward name="seeker" path="/jsp/seeker/home.jsp"/>
            <forward name="sitter" path="/jsp/sitter/home.jsp"/>
            <forward name="fail" path="/jsp/index.jsp"/>
        </action>

    </action-mappings>

    <message-resources parameter="message/Messages"/>

</struts-config>