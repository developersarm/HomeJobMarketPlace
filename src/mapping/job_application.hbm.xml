<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="org.care.model.JobApplication" table="job_application">

        <id name="jobAppId" type="int" column="id">
            <generator class="identity"/>
        </id>

        <many-to-one name="job" column="job_id"
                     class="org.care.model.Job" not-null="true" />

        <many-to-one name="sitter" column="member_id"
                     class="org.care.model.Sitter" not-null="true" />

        <property name="expectedPay" type="double" column="expected_pay"/>
        <property name="status" column="status">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">org.care.model.JobApplication$Status</param>
                <param name="useNamed">true</param>
            </type>
        </property>

    </class>

</hibernate-mapping>